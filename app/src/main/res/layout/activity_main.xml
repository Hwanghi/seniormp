<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0CC"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="마포지회 정보창"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="#FF96B4"
        android:fontFamily="sans-serif-medium"
        android:onClick="onButtonClicked"
        android:shadowColor="#000000"
        android:text="홈페이지"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FA1F24"
        android:fontFamily="sans-serif-medium"
        android:onClick="onButton2Clicked"
        android:text="영상 보기"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:background="#FFE60B"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onButton3Clicked"
        android:text="지하철"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />


    <Button
        android:background="#25E62C"
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onButton4Clicked"
        android:text="QR코드 읽기"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        />

    <Button
        android:visibility="gone"
        android:background="#14B6FF"
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onButton5Clicked"
        android:text="만보기"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        />

    <TextView
        android:id="@+id/title_buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="(사)대한노인회마포구지회"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>